CC = @MAKEFILE_CC@
CFLAGS = -c -O2

BINDIR = @BINDIR@ 
DATAROOTDIR = @DATAROOTDIR@

TARGET = vbsm

INCLUDES=`pkg-config --cflags gtk+-@GTK_VER@`
LIBS=`pkg-config --cflags --libs gtk+-@GTK_VER@`
OBJS_REMOTE = ../common/error.o ../common/cfg.o ../common/network.o ../common/util.o ../common/menu.o
OBJS_LOCAL = gui.o keyboard.o mouse.o export.o edit.o import.o vbsm.o menu.o

HAVE_MPLAYER = @HAVE_MPLAYER@
HAVE_GSTREAMER = @HAVE_GSTREAMER@

ifeq ($(HAVE_MPLAYER),1)
	OBJS_VIDEO_MP = video-mplayer.o
endif
ifeq ($(HAVE_GSTREAMER),1)
	OBJS_VIDEO_GS = video-gstreamer.o
	GS_LIBS = `pkg-config --cflags --libs gstreamer-0.10 gstreamer-interfaces-0.10`
	GS_INCLUDES = `pkg-config --cflags --libs gstreamer-0.10`
endif

all: $(TARGET)

clean:
	rm -f $(OBJS_LOCAL) $(TARGET) vbsm.desktop

distclean:
	make clean
	rm -f Makefile vbsm.desktop

install:
	test -z $(DESTDIR)$(BINDIR) || mkdir -p $(DESTDIR)$(BINDIR)
	cp -f $(TARGET) $(DESTDIR)$(BINDIR)
	test -z $(DESTDIR)$(DATAROOTDIR)/applications || mkdir -p $(DESTDIR)$(DATAROOTDIR)/applications
	cp -f vbsm.desktop $(DESTDIR)$(DATAROOTDIR)/applications

uninstall:
	rm -f $(TARGET) $(BINDIR)/$(TARGET)
	rm -f $(DATAROOTDIR)/applications/vbsm.desktop

$(TARGET): gui.c keyboard.c mouse.c export.c import.c video-mplayer.c video-gstreamer.c edit.c vbsm.c menu.c
	$(CC) $(CFLAGS) $(INCLUDES) $(GS_INCLUDES) gui.c
	$(CC) $(CFLAGS) $(INCLUDES) $(GS_INCLUDES) keyboard.c
	$(CC) $(CFLAGS) $(INCLUDES) $(GS_INCLUDES) mouse.c
	$(CC) $(CFLAGS) $(INCLUDES) $(GS_INCLUDES) export.c
	$(CC) $(CFLAGS) $(INCLUDES) $(GS_INCLUDES) import.c
	$(CC) $(CFLAGS) $(INCLUDES) $(GS_INCLUDES) edit.c
	$(CC) $(CFLAGS) $(INCLUDES) $(GS_INCLUDES) menu.c
	$(CC) $(CFLAGS) $(INCLUDES) $(GS_INCLUDES) vbsm.c
ifeq ($(HAVE_MPLAYER),1)
	$(CC) $(CFLAGS) $(INCLUDES) $(GS_INCLUDES) video-mplayer.c
endif
ifeq ($(HAVE_GSTREAMER),1)
	$(CC) $(CFLAGS) $(INCLUDES) $(GS_INCLUDES) video-gstreamer.c
endif
	$(CC) -o $@ $(LIBS) $(GS_LIBS) $(OBJS_LOCAL) $(OBJS_VIDEO_MP) $(OBJS_VIDEO_GS) $(OBJS_REMOTE)

