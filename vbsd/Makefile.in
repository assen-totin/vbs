SHELL = @MAKEFILE_SHELL@

LIBTOOL = @MAKEFILE_LIBTOOL@
LIBTOOL_OPTIONS_COMPILE = --tag=CC --mode=compile
LIBTOOL_OPTIONS_LINK = --tag=CC --mode=link

CC = @MAKEFILE_CC@
CFLAGS = -c -O2

LIBS = -lm

BINDIR = /usr/local/bin

ADD_FLAGS=`pkg-config --cflags --libs gtk+-2.0`

TARGET = vbsd 

OBJS_LOCAL = server.o 
OBJS_REMOTE = ../common/error.o ../common/cfg.o ../common/network.o ../common/util.o

INCLUDES=`pkg-config --cflags gtk+-2.0`
ADD_FLAGS=`pkg-config --cflags --libs gtk+-2.0`

all: $(TARGET)

clean:
	rm -f $(OBJS_LOCAL) $(TARGET) 

install:
	cp -f $(TARGET) $(BINDIR)

uninstall:
	rm -f $(TARGET) $(BINDIR)/$(TARGET)

$(TARGET): server.c
	$(CC) $(CFLAGS) $(INCLUDES) server.c
	$(CC) -o $@ $(LIBS) $(ADD_FLAGS) $(OBJS_LOCAL) $(OBJS_REMOTE)

