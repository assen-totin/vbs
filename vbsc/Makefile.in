CC = @MAKEFILE_CC@
CFLAGS = -c -O2

BINDIR = @BINDIR@ 

INCLUDES=`pkg-config --cflags gtk+-2.0`
ADD_FLAGS=`pkg-config --cflags --libs gtk+-2.0`

TARGET = vbsc 

OBJS_LOCAL = vbsc.o menu.o
OBJS_REMOTE = ../common/network.o ../common/error.o ../common/cfg.o ../common/util.o ../common/menu.o

all: $(TARGET)

clean:
	rm -f $(OBJS_LOCAL) $(TARGET) vbsc.desktop

distclean:
	make clean
	rm -f Makefile vbsc.desktop

install:
	test -z $(DESTDIR)$(BINDIR) || mkdir -p $(DESTDIR)$(BINDIR)
	cp -f $(TARGET) $(BINDIR)
	test -z $(DESTDIR)$(DATAROOTDIR)/applications || mkdir -p $(DESTDIR)$(DATAROOTDIR)/applications
	cp -f vbsc.desktop $(DESTDIR)$(DATAROOTDIR)/applications

uninstall:
	rm -f $(TARGET) $(BINDIR)/$(TARGET)
	rm -f $(DATAROOTDIR)/applications/vbsc.desktop

$(TARGET): vbsc.c menu.c
	$(CC) $(CFLAGS) $(INCLUDES) vbsc.c
	$(CC) $(CFLAGS) $(INCLUDES) menu.c
	$(CC) -o $@ $(ADD_FLAGS) $(OBJS_LOCAL) $(OBJS_REMOTE)

