CC = @MAKEFILE_CC@
CFLAGS = -c -O2

BINDIR = @BINDIR@ 

INCLUDES=`pkg-config --cflags gtk+-2.0`
ADD_FLAGS=`pkg-config --cflags --libs gtk+-2.0`
ADD_FLAGS2=`pkg-config --libs gthread-2.0`

TARGET = vbss 

OBJS_LOCAL = vbss.o keyboard.o 
OBJS_REMOTE = ../common/network.o ../common/error.o ../common/cfg.o ../common/util.o 

all: $(TARGET)

clean:
	rm -f $(OBJS_LOCAL) $(TARGET) vbss.desktop

distclean:
	make clean
	rm -f Makefile vbss.desktop

install:
	test -z $(DESTDIR)$(BINDIR) || mkdir -p $(DESTDIR)$(BINDIR)
	cp -f $(TARGET) $(BINDIR)
	test -z $(DESTDIR)$(DATAROOTDIR)/applications || mkdir -p $(DESTDIR)$(DATAROOTDIR)/applications
	cp -f vbss.desktop $(DESTDIR)$(DATAROOTDIR)/applications

uninstall:
	rm -f $(TARGET) $(BINDIR)/$(TARGET)
	rm -f $(DATAROOTDIR)/applications/vbss.desktop

$(TARGET): vbss.c keyboard.c
	$(CC) $(CFLAGS) $(INCLUDES) vbss.c
	$(CC) $(CFLAGS) $(INCLUDES) keyboard.c
	$(CC) -o $@ $(ADD_FLAGS) $(ADD_FLAGS2) $(OBJS_LOCAL) $(OBJS_REMOTE)

